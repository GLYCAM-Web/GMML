#This is where all the checks we want clang tidy to run, right now just going
#for the readability changes now....
Checks: '-*,readability-identifier-naming'
CheckOptions:
#Namespace naming stuff
    - { key: readability-identifier-naming.NamespaceCase,           value:  lower_case          }
#- { key: readability-identifier-naming.InlineNamespaceCase,    value:  lower_case          }
#Enum naming stuff
    - { key: readability-identifier-naming.EnumCase,                value:  Camel_Snake_Case    }
    - { key: readability-identifier-naming.EnumConstantCase,        value:  lower_case          }
#- { key: readability-identifier-naming.ScopedEnumConstantCase,  value:  lower_case          }
#Class naming stuff
#- { key: readability-identifier-naming.AbstractClassCase,       value:  Camel_Snake_Case    }
    - { key: readability-identifier-naming.ClassCase,                value: Camel_Snake_Case     }
#- { key: readability-identifier-naming.ClassConstantCase,       value: lower_case           }
#- { key: readability-identifier-naming.ClassMemberCase,          value: lower_case           }
#- { key: readability-identifier-naming.ClassMethodCase,          value: camel_Snake_Back     }
    - { key: readability-identifier-naming.PrivateMemberPrefix,      value: m_                   }
    - { key: readability-identifier-naming.PrivateMemberCase,        value: lower_case           }
#Stuff for naming functions
    - { key: readability-identifier-naming.FunctionCase,             value: camel_Snake_Back     }
    - { key: readability-identifier-naming.ParameterPrefix,          value:  t_                  }
    - { key: readability-identifier-naming.ParameterCase,            value:  lower_case          }
#Random other stuff
    - { key: readability-identifier-naming.VariableCase,             value:  lower_case          }
    - { key: readability-identifier-naming.VariablePrefix,	     value: ""                    }
    - { key: readability-identifier-naming.VariableSuffix,           value: ""                     }
    - { key: readability-identifier-naming.MacroDefinitionCase,      value: UPPER_CASE           }
    - { key: readability-identifier-naming.ConstantPrefix,           value: const_               }
    - { key: readability-identifier-naming.ConstantCase,             value: lower_case           }
#    - { key: readability-identifier-naming.AggressiveDependentMemberLookup, value: 'true'	}
